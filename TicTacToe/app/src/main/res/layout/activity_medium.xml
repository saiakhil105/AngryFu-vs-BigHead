<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:background="@drawable/violet_background"
    tools:context=".Game_2">

    <androidx.cardview.widget.CardView
        android:id="@+id/game_board_2"
        android:layout_width="390dp"
        android:layout_height="390dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            app:srcCompat="@drawable/borad_background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image0"
                android:layout_width="114dp"
                android:layout_height="108dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:onClick="playerTap"
                android:padding="10dp"
                android:tag="0"
                app:srcCompat="@drawable/white" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="111dp"
                android:layout_height="108dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="3dp"
                android:onClick="playerTap"
                android:padding="10dp"
                android:tag="1"
                app:srcCompat="@drawable/white" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="114dp"
                android:layout_height="108dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="244dp"
                android:layout_marginTop="3dp"
                android:onClick="playerTap"
                android:padding="10dp"
                android:tag="2"
                app:srcCompat="@drawable/white" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="114dp"
                android:layout_height="108dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="122dp"
                android:onClick="playerTap"
                android:padding="10dp"
                android:tag="3"
                app:srcCompat="@drawable/white" />

            <ImageView
                android:id="@+id/image4"
                android:layout_width="111dp"
                android:layout_height="108dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="122dp"
                android:onClick="playerTap"
                android:padding="10dp"
                android:tag="4"
                app:srcCompat="@drawable/white" />

            <ImageView
                android:id="@+id/image5"
                android:layout_width="114dp"
                android:layout_height="108dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="244dp"
                android:layout_marginTop="122dp"
                android:onClick="playerTap"
                android:padding="10dp"
                android:tag="5"
                app:srcCompat="@drawable/white" />

            <ImageView
                android:id="@+id/image6"
                android:layout_width="114dp"
                android:layout_height="108dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="240dp"
                android:onClick="playerTap"
                android:padding="10dp"
                android:tag="6"
                app:srcCompat="@drawable/white" />

            <ImageView
                android:id="@+id/image7"
                android:layout_width="111dp"
                android:layout_height="108dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="240dp"
                android:onClick="playerTap"
                android:padding="10dp"
                android:tag="7"
                app:srcCompat="@drawable/white" />

            <ImageView
                android:id="@+id/image8"
                android:layout_width="114dp"
                android:layout_height="108dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="244dp"
                android:layout_marginTop="240dp"
                android:onClick="playerTap"
                android:padding="10dp"
                android:tag="8"
                app:srcCompat="@drawable/white" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="5dp"
            android:src="@drawable/angry_fu" />

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/angryfuscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/bowlby_one_sc"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/bigheadscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/bowlby_one_sc"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/textViewt"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="5dp"
            android:src="@drawable/big_head"/>
    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/button_gradient_6"
        android:elevation="15dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="RESET"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</RelativeLayout>