<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="false"
    android:layout_alignParentBottom="true"
    android:background="@drawable/violet_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="335dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="CHOOSE YOUR PLAY MODE"
        android:textColor="#FFC300"
        android:textSize="22sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp">

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/button_gradient_2"
            android:elevation="5dp"
            android:src="@drawable/ic_baseline_settings_24"
            android:tint="#FFFFFF"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/about"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_gradient_4"
            android:elevation="5dp"
            android:tint="#FFFFFF"
            app:srcCompat="@drawable/ic_baseline_explore_24"
            tools:ignore="VectorDrawableCompat" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="370dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="500dp"
            android:layout_height="350dp"
            android:paddingLeft="40dp"
            app:srcCompat="@drawable/tictactoe" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/player1"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        app:srcCompat="@drawable/play_with_bighead" />

    <ImageView
        android:id="@+id/player2"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470dp"
        app:srcCompat="@drawable/play_with_friends" />


</RelativeLayout>

